{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Manage {{presentation.description}}</h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">


        <table>
            <tbody>
                <tr>
                    <th>Description</th>
                    <td>{{ presentation.description }}</td>
                </tr>
                <tr>
                    <th>Deleted</th>
                    <td>{{ presentation.deleted }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('product_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('presentation_edit', { 'id': presentation.id }) }}">Edit</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <h4>Image: {{presentation.description}}</h4>
            <img style="max-height:300px;" src="{{asset(presentation.photoPath)}}" />
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

{% endblock %}
