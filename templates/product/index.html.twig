{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- DataTables CSS -->
    <link href="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h3>Products list</h3>

    <table class="table table-striped" id="dt_tbl">
        <thead>
            <tr>
                <th>Preview</th>
                <th>Title</th>
                {# <th>Author</th> #}
                <th>Category</th>
                <th>Cost</th>
                <th>Description</th>
                <th>Availability</th>
                {# <th>Uploaded</th> #}
                <th>Actions</th>
                {% if app.user and app.user.active == true %}
                    <th>Admin</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}"><button class="btn btn-lg" style="background-image:url('{{asset(product.image)}}'); background-repeat: no-repeat; background-position: center; background-size: contain;"></button></a></td>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.title }}</a></td>
                {# <td>{{ product.author }}</td> #}
                <td>{{ product.category.name }}</td>
                <td>{{ product.cost }}</td>
                <td>{{ product.description|length > 50 ? product.description|striptags|slice(0, 50) ~ '...' : product.description|raw|striptags  }}</td>
                <td>{{ product.availability }}</td>
                {# <td>{% if product.uploaded %}{{ product.uploaded|date('Y-m-d H:i:s') }}{% endif %}</td> #}
                <td>
                  <a class="btn btn-primary" href="{{ path('product_show', { 'id': product.id }) }}">show</a>
                </td>
                {% if app.user and app.user.active == true %}
                    <td>
                      <a class="btn btn-info" href="{{ path('presentation_new', { 'bk_id': product.id }) }}">Presentation</a>
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if app.user and app.user.active == true %}
    <ul>
        <li>
            <a href="{{ path('product_new') }}">Create a new product</a>
        </li>
        <li>
            <a href="{{ path('product_deleted') }}">Restore Deleted Products</a>
        </li>
    </ul>
{% endif %}
</div>
</main>
{% endblock %}
{% block javascripts %}
    <!-- DataTables JavaScript -->
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
    $(document).ready(function() {
        $('#dt_tbl').DataTable({
            responsive: true,
            "pageLength": 10

        });
    });
    </script>

{% endblock %}