{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Add Product </h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          {{ form_start(form, {'attr': {'class': 'login-form'}}) }}
            <p class="login-img"><i class="arrow_carrot-right_alt "></i></p>
            <div class="form-group">
              <label>Product Title</label>
              {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Product Title' }}) }}
            </div>
            {# <div class="form-group">
              <label>Product Author</label>
              {{ form_row(form.author, {'attr': {'class': 'form-control', 'placeholder': 'Product Author' }}) }}
            </div> #}
            {% if categories|length < 1 %}
            <div class="alert" role="alert">It seems you've got no categories to choose from. <a href="{{path('category_new')}}">Add now</a></div>
            {% endif %}
            <div class="form-group">
              {{ form_row(form.category, {'attr': {'class': 'form-control', 'placeholder': 'Category' }}) }}
            </div>
            <div class="form-group">
              <label>Cost</label>
              {{ form_row(form.cost, {'attr': {'class': 'form-control', 'placeholder': 'Cost' }}) }}
            </div>
            <div class="form-group">
              <label>Description</label>
              {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description' }}) }}
            </div>
            <div class="form-group">
              <label>Availability</label>
              {{ form_row(form.availability, {'attr': {'class': 'form-control', 'placeholder': 'Availability' }}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.image, {'attr': {'class': 'form-control' }}) }}
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Add Product</button>
          {{ form_end(form) }}

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

    <ul>
        <li>
            <a href="{{ path('product_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
