{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Add official</h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          {{ form_start(form, {'attr': {'class': 'login-form'}}) }}
            <p class="login-img"><i class="arrow_carrot-right_alt "></i></p>
            <div class="form-group">
              <label>Office Title</label>
              {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Office Title' }}) }}
            </div>
            <div class="form-group">
              <label>Full Name</label>
              {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Full Name' }}) }}
            </div>
            <div class="form-group">
              <label>Phone Number</label>
              {{ form_row(form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number' }}) }}
            </div>
            <div class="form-group">
              <label>Email</label>
              {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address' }}) }}
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Add official</button>
          {{ form_end(form) }}

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-6 mb-4">

          <h4>Added officials</h4>
          <ul>
            {% for official in officials %}
                <li>{{official.title}} | <a href="{{path('official_edit', {'id': official.id})}}">Edit</a> | <a href="{{path('official_show', {'id': official.id})}}">Manage</a></li>
            {% endfor %}
          </ul>
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

    <ul>
        <li>
            <a href="{{ path('official_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
