{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Edit official</h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          {{ form_start(edit_form, {'attr': {'class': 'login-form'}}) }}
            <p class="login-img"><i class="arrow_carrot-right_alt "></i></p>
            <div class="form-group">
              <label>Office Title</label>
              {{ form_row(edit_form.title, {'attr': {'class': 'form-control', 'placeholder': 'Office Title' }}) }}
            </div>
            <div class="form-group">
              <label>Full Name</label>
              {{ form_row(edit_form.name, {'attr': {'class': 'form-control', 'placeholder': 'Full Name' }}) }}
            </div>
            <div class="form-group">
              <label>Phone Number</label>
              {{ form_row(edit_form.phone, {'attr': {'class': 'form-control', 'placeholder': 'Phone Number' }}) }}
            </div>
            <div class="form-group">
              <label>Email</label>
              {{ form_row(edit_form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address' }}) }}
            </div>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Edit official</button>
          {{ form_end(edit_form) }}

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

    <ul>
        <li>
            <a href="{{ path('official_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
