{% extends 'base.html.twig' %}
{% block carousel %}{% endblock %}
{% block title %}New Category{% endblock %}
{% block body %}
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h4>Add Category </h4>
    <!--Grid row-->
      <div class="row wow fadeIn">
        <!--Grid column-->
        <div class="col-md-6 mb-4">

          {{ form_start(form, {'attr': {'class': 'login-form'}}) }}
            <p class="login-img"><i class="arrow_carrot-right_alt "></i></p>
            <div class="form-group">
              {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name' }}) }}
            </div>
            <div class="form-group">
              {{ form_row(form.priority, {'attr': {'class': 'form-control', 'placeholder': 'Priority' }}) }}
            </div>
          <button class="btn btn-primary btn-lg btn-block" type="submit">Add Category</button>
          {{ form_end(form) }}
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->
      </div>
    </main>

    <ul>
        <li>
            <a href="{{ path('category_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}

