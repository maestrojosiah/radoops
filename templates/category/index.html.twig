{% extends 'base.html.twig' %}
{% block stylesheets %}
    <!-- DataTables CSS -->
    <link href="{{ asset('vendor/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
{% endblock %}
{% block carousel %}{% endblock %}
{% block body %}
  <!--Main layout-->
  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container dark-grey-text mt-5">

    <h3>Categories list</h3>

    <table class="table table-striped" id="dt_tbl">
        <thead>
            <tr>
                <th>Name</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.name }}</a></td>
                <td>{{ category.priority }}</td>
                <td>
                    <a class="btn btn-sm" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% if app.user and app.user.active == true %}
    <ul>
        <li>
            <a href="{{ path('category_new') }}">Create a new category</a>
        </li>
    </ul>
{% endif %}
</div>
</main>
{% endblock %}
{% block javascripts %}
    <!-- DataTables JavaScript -->
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    <script>
    $(document).ready(function() {
        $('#dt_tbl').DataTable({
            responsive: true,
            "pageLength": 10

        });
    });
    </script>

{% endblock %}



